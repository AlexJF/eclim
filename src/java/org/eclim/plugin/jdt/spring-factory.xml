<!DOCTYPE beans PUBLIC
  "-//SPRING//DTD BEAN//EN"
  "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
 Author: Eric Van Dewoestine
-->
<beans>

  <bean id="propertyConfigurer"
      class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <description>Configurer to replace ${..} properties.</description>
    <property name="systemPropertiesMode">
      <bean class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
        <property name="staticField">
          <value>org.springframework.beans.factory.config.PropertyPlaceholderConfigurer.SYSTEM_PROPERTIES_MODE_OVERRIDE</value>
        </property>
      </bean>
    </property>
    <property name="location" value="plugin.properties"/>
    <property name="ignoreUnresolvablePlaceholders" value="true"/>
  </bean>

  <bean id="messageSource"
      class="org.eclim.util.spring.ResourceBundleMessageSource">
    <description>Defines the resource bundle used for messages.</description>
    <property name="basenames">
      <list>
        <value>org/eclim/plugin/jdt/messages</value>
      </list>
    </property>
  </bean>

  <bean name="initializer" class="org.eclim.plugin.jdt.Initializer"
      init-method="initialize" destroy-method="shutdown">
    <description>Initializes java environment.</description>
  </bean>

  <bean name="java_src_update"
      class="org.eclim.plugin.jdt.command.src.SrcUpdateCommand">
    <description>Handles client request to update a java src file.</description>
    <property name="preferences" ref="preferences"/>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.command.filter.ErrorFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="java_src_exists"
      class="org.eclim.plugin.jdt.command.src.SrcFileExistsCommand">
    <description>
      Handles client request to determine if the a src file exists.
    </description>
  </bean>

  <bean name="java_search" class="org.eclim.plugin.jdt.command.search.SearchCommand">
    <description>Handles client search requests.</description>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.plugin.jdt.command.search.SearchFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="java_docsearch" class="org.eclim.plugin.jdt.command.doc.DocSearchCommand">
    <description>Handles client search requests for javadocs.</description>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.plugin.jdt.command.doc.DocSearchFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="java_import" class="org.eclim.plugin.jdt.command.include.ImportCommand">
    <description>Handles client import request.</description>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.plugin.jdt.command.include.ImportFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="java_complete"
      class="org.eclim.plugin.jdt.command.complete.CodeCompleteCommand">
    <description>Handles client code completion requests.</description>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.plugin.jdt.command.complete.CodeCompleteFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="java_correct"
      class="org.eclim.plugin.jdt.command.correct.CodeCorrectCommand">
    <description>Handles client code correct requests.</description>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.plugin.jdt.command.correct.CodeCorrectFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="java_impl"
      class="org.eclim.plugin.jdt.command.impl.ImplCommand">
    <description>Handles client impl requests.</description>
    <property name="preferences" ref="preferences"/>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.plugin.jdt.command.impl.ImplFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="java_junit_impl"
      class="org.eclim.plugin.jdt.command.junit.JUnitImplCommand">
    <description>Handles client junit impl requests.</description>
    <property name="preferences" ref="preferences"/>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.plugin.jdt.command.impl.ImplFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="java_delegate"
      class="org.eclim.plugin.jdt.command.delegate.DelegateCommand">
    <description>Handles client request to add delegate methods.</description>
    <property name="preferences" ref="preferences"/>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.plugin.jdt.command.impl.ImplFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="java_bean_properties"
      class="org.eclim.plugin.jdt.command.bean.PropertiesCommand">
    <description>
      Handles client request to generate java bean properties.
    </description>
    <property name="preferences" ref="preferences"/>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.command.filter.PositionFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="java_class_prototype"
      class="org.eclim.plugin.jdt.command.src.ClassPrototypeCommand">
    <description>
      Handles request to generate a prototype of a class file.
    </description>
  </bean>

  <bean name="java_classpath_variables"
      class="org.eclim.plugin.jdt.command.classpath.ClasspathVariablesCommand">
    <description>Handles client request to update a java src file.</description>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.plugin.jdt.command.classpath.ClasspathVariablesFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="ivy.xml"
      class="org.eclim.plugin.jdt.command.project.classpath.IvyParser">
    <description>
      Parser for ivy files used to merge build dependency file into the eclipse
      classpath.
    </description>
  </bean>

  <bean name="project.xml"
      class="org.eclim.plugin.jdt.command.project.classpath.MavenParser">
    <description>
      Parser for maven proeject files used to merge build dependency file into
      the eclipse classpath.
    </description>
  </bean>

</beans>
