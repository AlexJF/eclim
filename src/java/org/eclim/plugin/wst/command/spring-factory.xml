<!DOCTYPE beans PUBLIC
  "-//SPRING//DTD BEAN//EN"
  "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <bean name="css_complete"
      class="org.eclim.plugin.wst.command.complete.CssCodeCompleteCommand">
    <description>
      Handles requests for css code completion.
    </description>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.command.complete.CodeCompleteFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="html_complete"
      class="org.eclim.plugin.wst.command.complete.HtmlCodeCompleteCommand">
    <description>
      Handles requests for html code completion.
    </description>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.command.complete.CodeCompleteFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="javascript_complete"
      class="org.eclim.plugin.wst.command.complete.JavascriptCodeCompleteCommand">
    <description>
      Handles requests for javascript code completion.
    </description>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.command.complete.CodeCompleteFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="xml_complete"
      class="org.eclim.plugin.wst.command.complete.XmlCodeCompleteCommand">
    <description>
      Handles requests for xml code completion.
    </description>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.command.complete.CodeCompleteFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="dtd_validate"
      class="org.eclim.plugin.wst.command.validate.DtdValidateCommand">
    <description>
      Handles requests for dtd file validation.
    </description>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.command.filter.ErrorFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="wsdl_validate"
      class="org.eclim.plugin.wst.command.validate.WsdlValidateCommand">
    <description>
      Handles requests for wsdl file validation.
    </description>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.command.filter.ErrorFilter"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean name="xsd_validate"
      class="org.eclim.plugin.wst.command.validate.XsdValidateCommand">
    <description>
      Handles requests for xsd file validation.
    </description>
    <property name="filters">
      <map>
        <entry key="vim">
          <bean class="org.eclim.command.filter.ErrorFilter"/>
        </entry>
      </map>
    </property>
  </bean>

</beans>
