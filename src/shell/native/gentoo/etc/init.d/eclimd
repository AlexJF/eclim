#!/sbin/runscript

depend() {
  need net
}

start() {
  ebegin "Starting eclimd"
  su $ECLIM_USER -c "source /etc/profile && DISPLAY=$DISPLAY ECLIPSE_HOME=$ECLIPSE_HOME $ECLIM_HOME/bin/eclimd > /dev/null &"
  eend $?
}

stop() {
  ebegin "Stopping eclimd"
  su $ECLIM_USER -c "source /etc/profile && $ECLIM_HOME/bin/eclim -command shutdown"
  eend
}
