CURPATH=`dirname $0`

# handle symlink to eclimd script
if [ -h $0 ] ; then
  RESOLVED=`readlink -f $0`
  CURPATH=`dirname $RESOLVED`
fi

#ECLIMD_OPTS="-Djava.ext.dirs"
ECLIM_HOME=`cd "$CURPATH/.." ; pwd`

#${eclipse.home}
if [ -z "$ECLIPSE_HOME" ]; then
  ECLIPSE_HOME=`dirname \`dirname "$ECLIM_HOME"\``
fi
ECLIM_ARGS="-Declim.home="$ECLIM_HOME" $ECLIMD_OPTS"

# attempt to grab properties from .eclimrc if available.
SED=`which sed 2> /dev/null`
if [ -f "$HOME/.eclimrc" -a -n "$SED" ] ; then
  ECLIM_ARGS="$ECLIM_ARGS `sed -n -f $CURPATH/eclimd.sed $HOME/.eclimrc`"
fi

# find eclipse executable
ECLIPSE="$ECLIPSE_HOME/eclipse"
if [ ! -e "$ECLIPSE" ]; then
  ECLIPSE=`which eclipse 2> /dev/null`
  if [ ! -e "$ECLIPSE" ]; then
    echo "No eclipse executable found." 1>&2
    exit 1
  fi
fi

# handle eclipse 3.3 issue on gentoo
IS_GENTOO=`which java-config 2> /dev/null`
if [ -x "$IS_GENTOO" ]; then
  ECLIPSE="$ECLIPSE -vm $(java-config --java)"
fi

ECLIM_COMMAND="$ECLIPSE
  -debug -nosplash -clean -refresh -application
  org.eclim.application -vmargs $ECLIM_ARGS"
#echo $ECLIM_COMMAND | sed 's/\s\(-[a-z]\)/\n \1/g'

if [ "$1" = "start" ]; then
  shift
  CLASSPATH="" $ECLIM_COMMAND $@ > /dev/null &
else
  CLASSPATH="" $ECLIM_COMMAND $@
fi
