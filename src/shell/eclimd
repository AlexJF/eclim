if [ -z "$ECLIPSE_HOME" ]; then
  echo "ECLIPSE_HOME not set" 1>&2
  exit 1
fi

if [ ! -e "$ECLIPSE_HOME/eclipse" ]; then
  echo "No eclipse executable found.  ECLIPSE_HOME may be invalid." 1>&2
  exit 1
fi

CURPATH=`dirname $0`
SED=`which sed 2> /dev/null`
ECLIM_HOME="$ECLIPSE_HOME/plugins/org.eclim_${eclim.version}"
ECLIM_ARGS="-Declim.home="$ECLIM_HOME""

# attempt to grab properties from .eclimrc if available.
if [ -f "$HOME/.eclimrc" -a -n "$SED" ] ; then
  ECLIM_ARGS="$ECLIM_ARGS `sed -n -f $CURPATH/eclimd.sed $HOME/.eclimrc`"
fi

ECLIM_COMMAND="$ECLIPSE_HOME/eclipse
  -debug -consolelog -nosplash -clean -refresh -application
  org.eclim.application -vmargs $ECLIM_ARGS"

if [ "$1" = "start" ]; then
  shift
  $ECLIM_COMMAND $@ > /dev/null &
else
  $ECLIM_COMMAND $@
fi
