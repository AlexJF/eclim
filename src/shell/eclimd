CURPATH=`dirname $0`

# handle symlink to eclimd script
if [ -h $0 ] ; then
  RESOLVED=`readlink -f $0`
  CURPATH=`dirname $RESOLVED`
fi

#ECLIMD_OPTS="-Djava.ext.dirs"
ECLIM_HOME=`cd "$CURPATH/.." ; pwd`

#${eclipse.home}
if [ -z "$ECLIM_ECLIPSE_HOME" ]; then
  ECLIM_ECLIPSE_HOME=`dirname \`dirname "$ECLIM_HOME"\``
fi
ECLIM_ARGS="-Declim.home="$ECLIM_HOME" $ECLIMD_OPTS"

# attempt to grab properties from .eclimrc if available.
SED=`which sed 2> /dev/null`
if [ -f "$HOME/.eclimrc" -a -n "$SED" ] ; then
  ECLIM_ARGS="$ECLIM_ARGS `sed -n -f $CURPATH/eclimd.sed $HOME/.eclimrc`"
fi

ECLIM_VMARGS="-vmargs $ECLIM_ARGS"

# find eclipse executable
ECLIPSE="$ECLIM_ECLIPSE_HOME/eclipse"
if [ ! -e "$ECLIPSE" ]; then
  ECLIPSE=`which eclipse 2> /dev/null`
fi
if [ ! -e "$ECLIPSE" ]; then
  ECLIPSE=`which eclipse-3.4 2> /dev/null`
fi
if [ ! -e "$ECLIPSE" ]; then
  echo "No eclipse executable found." 1>&2
  exit 1
fi

# handle eclipse issues on gentoo
IS_GENTOO=`which java-config 2> /dev/null`
if [ -x "$IS_GENTOO" ]; then
  ECLIPSE="$ECLIPSE -vm $(java-config --java)"

  # handle emerged version of eclipse which has a bootstrap script
  ECLIPSE_33=`which eclipse-3.3 2> /dev/null`
  if [ "$ECLIM_ECLIPSE_HOME" = "/usr/lib/eclipse-3.3" -a -e "$ECLIPSE_33" ]; then
    ECLIPSE="$ECLIPSE_33"
    GENTOO_VMARGS="$ECLIM_ARGS"
    ECLIM_VMARGS=""
  fi
fi

ECLIM_COMMAND="$ECLIPSE
  -debug -nosplash -clean -refresh -application
  org.eclim.application_headless $ECLIM_VMARGS"

if [ "$1" = "start" ]; then
  shift
  CLASSPATH="" VM_ARGS="$GENTOO_VMARGS" $ECLIM_COMMAND $@ > /dev/null &
else
  CLASSPATH="" VM_ARGS="$GENTOO_VMARGS" $ECLIM_COMMAND $@
fi
