CURPATH=`dirname $0`

ECLIPSE=`which eclipse 2> /dev/null`
if [ -z $ECLIPSE ]; then
  ECLIPSE_HOME=`cd "$CURPATH/../../.." ; pwd`
  ECLIPSE="$ECLIPSE_HOME/eclipse"
fi

if [ ! -e $ECLIPSE ]; then
  echo "No eclipse executable found." 1>&2
  exit 1
fi

$ECLIPSE -nosplash -application org.eclim.installer.application $@
