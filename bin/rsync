BASEDIR=`dirname $0`
BASEDIR="$BASEDIR/.."

rsync --recursive --compress --force --whole-file --delete --delete-after \
  --stats -v --rsh="ssh -l ervandew" \
  $BASEDIR/build/doc/forrest/site/* \
  ervandew@shell.sf.net:/home/groups/e/ec/eclim/htdocs

rsync --recursive --compress --force --whole-file --delete --delete-after \
  --stats -v --rsh="ssh -l ervandew" --exclude="CVS" \
  $BASEDIR/bin/server/* \
  ervandew@shell.sf.net:/home/groups/e/ec/eclim/scripts
