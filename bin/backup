#!/bin/sh

BACKUP_DIR=`dirname $0`
BACKUP_DIR="$BACKUP_DIR/../backup/eclim"

if [ ! -d $BACKUP_DIR ]; then
  mkdir -p $BACKUP_DIR
fi
cd $BACKUP_DIR

# backup svn files
rsync -av eclim.svn.sourceforge.net::svn/eclim/* .
tar zcvf ../eclim-backup-svn-`date +%Y%m%d`.tar.gz *

cd -

# backup wiki data
#cd $BACKUP_DIR/..
#rsync -av ervandew@shell.sf.net:/home/users/e/er/ervandew/backup/* .
#cd -

rm -rf $BACKUP_DIR
