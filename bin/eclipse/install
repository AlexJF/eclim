ECLIPSE_HOME="/usr/local/java/eclipse"
$ECLIPSE_HOME/eclipse \
  -nosplash -clean -refresh \
  -application org.eclipse.update.core.standaloneUpdate \
  -command install \
  -from $1 \
  -featureId $2 \
  -version $3 \
